---
import Contactform from "@components/contactform.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon";
---

<Layout title="Kontakt">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Kontakt</Fragment>
      <Fragment slot="desc">Du brauchst Hilfe? Kein Problem!</Fragment>
    </Sectionhead>
    
    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">Den Entwickler kontaktieren.</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          Wenn du einen Fehler gefunden hast, einen Verbesserungsvorschlag machen m√∂chtest oder einfach nur Hallo sagen willst, kannst du hier Kontakt mit dem Entwickler aufnehmen.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-4 text-gray-600">
            <a href="mailto:bahnfinder@gmail.com" class="flex items-center">
              <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" />
              <span class="ml-2">Email</span>
            </a>
          </div>
          <div class="mt-3">
            <div class="flex items-center mt-2 space-x-4 text-gray-600">
              <a href="bit.ly/bahnfinderwhatsapp" target="_blank" class="flex items-center">
                <Icon class="text-gray-400 w-4 h-4" name="uil:whatsapp" />
                <span class="ml-2">WhatsApp</span>
              </a>
            </div>
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
