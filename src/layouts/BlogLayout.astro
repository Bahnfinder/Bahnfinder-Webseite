---
import Container from "@components/container.astro";
import { getFormattedDate } from "@utils/all";
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <Container>
    <div class="mx-auto max-w-[735px] mt-14">
      <span class="text-blue-400 uppercase tracking-wider text-sm font-medium">
        {frontmatter.category}
      </span>
      <h1 class="flex-col text-4xl lg:text-5xl lg:tracking-tight lg:leading-tight BFGradient">
        <span>
          {frontmatter.title}
        </span>
      </h1>
      <div class="flex gap-2 mt-3 items-center flex-wrap md:flex-nowrap">
        <span class="secondaryLabelColor">
          {frontmatter.author}
        </span>
        <span class="secondaryLabelColor">•</span>
        <time class="secondaryLabelColor" datetime={frontmatter.publishDate}>
          {getFormattedDate(frontmatter.publishDate)}
        </time>
        <span class="secondaryLabelColor hidden md:block">•</span>
        <div class="w-full md:w-auto flex flex-wrap gap-3">
          {
            frontmatter.tags.map((tag) => (
              <span class="text-sm labelColor">#{tag}</span>
            ))
          }
        </div>
      </div>
    </div>

    <div class="mx-auto prose prose-lg mt-6">
      <slot />
    </div>
    <div class="text-center mt-8">
      <a
        href="/changelog"
        class="bg-gray-100 text-gray-800 px-5 py-3 rounded-md hover:bg-gray-200 hover:text-gray-900 transition"
        >← Zurück zur Übersicht</a
      >
    </div>
  </Container>
</Layout>